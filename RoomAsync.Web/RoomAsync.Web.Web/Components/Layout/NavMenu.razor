@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RoomAsync.Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="NavigateToHome">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </a>
        </div>

        <div class="nav-item px-3">


            <a class="nav-link" @onclick="NavigateToCounter">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Counter
            </a>

        </div>

        <div class="nav-item px-3">
            <a class="nav-link" @onclick="NavigateToWeather">
                <span class="bi bi-list-nested" aria-hidden="true"></span> Weather
            </a>
        </div>
    </nav>
</div>


@code {
    private void NavigateToCounter()
    {
        NavigationManager.NavigateTo("/counter");
    }
    private void NavigateToWeather()
    {
        NavigationManager.NavigateTo("/weather");
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

}

